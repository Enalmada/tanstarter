{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".turbo/**",
			".output/**",
			".vinxi/**",
			".codebuddy/**",
			".idea/**",
			".vscode/**",
			"app/server/db/migrations",
			"app/routeTree.gen.ts",
			"dist/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noConsoleLog": { "level": "error", "fix": "none" },
				"noExplicitAny": "off",
				"noExportsInTest": "off",
				"noArrayIndexKey": "off",
				"noRedeclare": "off",
				"noShadowRestrictedNames": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useValidAnchor": "off",
				"useHtmlLang": "off",
				"useHeadingContent": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noEmptyPattern": "off",
				"noUnreachable": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
